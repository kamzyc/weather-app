{
   "name": "weather-app",
   "version": "1.0.0",
   "description": "Weather app with location detection and forcast for next days",
   "default": "index.html",
   "browserslist": "last 10 versions",
   "scripts": {
      "watch-sass": "sass src/scss/main.scss src/css/style.css -w",
      "devserver": "live-server --browser=firefox",
      "dev-styles": "npm-run-all --parallel devserver watch-sass",
      "start": "parcel index.html",
      "build": "parcel build index.html --dist-dir ./dist"
   },
   "keywords": [
      "weather"
   ],
   "author": "Kamzyc",
   "license": "ISC",
   "devDependencies": {
      "npm-run-all": "^4.1.5",
      "parcel": "^2.0.0-rc.0",
      "sass": "^1.42.1"
   },
   "dependencies": {
      "dotenv": "^10.0.0"
   },
   "type": "module"
}
